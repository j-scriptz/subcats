<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Catalog\Model\Category\DataProvider">
        <plugin name="ait_dataprovider" type="Jscriptz\Subcats\Plugin\DataProviderPlugin"/>
    </type>
    <virtualType name="Jscriptz\Subcats\ImageUpload" type="Jscriptz\Subcats\Model\ImageUploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">catalog/tmp/category</argument>
            <argument name="basePath" xsi:type="string">catalog/category</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Jscriptz\Subcats\Controller\Adminhtml\Image\Upload">
        <arguments>
            <argument name="imageUploader" xsi:type="object">Jscriptz\Subcats\ImageUpload</argument>
        </arguments>
    </type>
	<preference for="Magento\Catalog\Block\Category\View" type="Jscriptz\Subcats\Block\Subcats" />
</config>